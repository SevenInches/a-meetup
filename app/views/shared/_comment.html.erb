<div class="reply clearfix">
   <div class="avatar">
     <%= link_to '#' do %>
       <%= image_tag c.user.avatar, class: 'image-circle' %>
     <% end %>
   </div>
   <div class="body">
     <div class="heading">
        <h5 class="name"><%= link_to c.user.name, "#" %></h5>
        <% if c.floor.present? %>
          <a class="reply-floor" href="#reply<%= c.floor %>" ><%= c.floor %>楼</a>
        <% end %>  
        <span class="datetime">
          <%= time_ago_in_words c.created_at %>前
        </span>
     </div>
     <%= markdown c.content %>
   </div>
</div>

